<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_sub_item"
    android:scaleType="centerCrop"
    android:src="@color/red"
    android:layout_width="70dp"
    android:layout_height="70dp" />
    <TextView
        android:id="@+id/tv_title"
        android:text="标题"
        android:textColor="@color/nomal_color"
        android:textSize="@dimen/sp_14"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@+id/iv_sub_item"
        android:layout_toRightOf="@+id/iv_sub_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_des"
        android:text="描述内容"
        android:textColor="@color/nomal_color"
        android:textSize="@dimen/sp_12"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_above="@+id/tv_tiem"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/iv_sub_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_tiem"
        android:text="0.9-16-13：39"
        android:textColor="@color/nomal_color"
        android:textSize="@dimen/sp_10"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/iv_sub_item"
        android:layout_height="wrap_content" />
</RelativeLayout>